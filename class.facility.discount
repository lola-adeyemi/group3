        class Discount {
            
            //table fields
            private $discountid;
            private $gymid;
            public  $name;
            public  $percentage;
            public  $expiration;
            
            
            //for information on discount
            
            function __construct($discountid,$gymid,$name,$percentage,$expiration) {
                    $this->discountid=$discountid;
                    $this->gymid=$gymid;
                    $this->name=$name;
                    $this->percentage=$percentage;
                    $this->expiration=$expiration;
            }
            
            public function getName() {
                return $this->name;
            }
        
            public function getPercentage() {
                return $this->percentage;
            }
            
            public function getExpiration() {
                
                return $this->expiration;
            }
        }
        
